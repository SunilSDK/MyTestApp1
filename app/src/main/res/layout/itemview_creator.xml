<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="20dp"
    android:layout_height="wrap_content">


    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/sivIcon"
        android:src="@drawable/ic_baseline_circle_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/sivIcon"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/tvName"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toTopOf="@id/tvMusic"
        app:layout_constraintEnd_toStartOf="@id/bButton"
        android:text="Name"/>

    <TextView
        android:layout_width="0dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:id="@+id/tvMusic"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/sivIcon"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        app:layout_constraintEnd_toStartOf="@id/bButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Music"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_height="35dp"
        android:elevation="10dp"
        android:text="Follow"
        android:textColor="#ffffff"
        android:background="@drawable/botton_selector"
        android:id="@+id/bButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>